grant {
    // Allow basic file operations in workspace
    permission java.io.FilePermission "/workspace/*", "read,write,delete";
    permission java.io.FilePermission "/tmp/execution/*", "read,write,delete";
    
    // Allow standard input/output
    permission java.io.FilePermission "/dev/stdin", "read";
    permission java.io.FilePermission "/dev/stdout", "write";
    permission java.io.FilePermission "/dev/stderr", "write";
    
    // Allow basic runtime permissions
    permission java.lang.RuntimePermission "exitVM";
    permission java.util.PropertyPermission "*", "read";
    
    // Deny network access
    // Deny system property modifications
    // Deny reflection access to sensitive classes
};
